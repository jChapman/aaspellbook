---
import Layout from "../layouts/Layout.astro";
import AbilityCard from "../components/AbilityCard.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import allAbilities from "../data/abilities.json"
import enabledAbilities from "../data/enabled_abilities.json"
---

<Layout title="Spellbook">
  <Header/>
  <main>
    <div class="flex flex-wrap justify-center">
      {allAbilities.filter(({id}) => enabledAbilities.includes(id)).map(a => <AbilityCard ability={a}/>)}
    </div>
  </main>
  <Footer/>
</Layout>

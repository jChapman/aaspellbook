---
import allBods from '../data/bodies.json'
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BodyCard from '../components/BodyCard.astro';
---

<Layout title="Bodies">
  <Header title="Bodies"/>
  <main>
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 w-3/4 py-4 mx-auto">
    {allBods.map(b => (
      <BodyCard body={b} level={20}/>
    ))}
    </div>
  </main>
  <Footer/>
</Layout>
